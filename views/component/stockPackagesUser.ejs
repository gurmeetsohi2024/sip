<%- include('link') %>
<link rel="stylesheet" href="\styles\content.css">

<div class="container-fluid">
    <div class="row">
        <center>
            <h2>OFFER PACKAGES :: <%= allStockpackage.name %></h2>
        </center>
        <br>
        <br>
        <br>
       <div class="row">
        <% allStockpackage.forEach(element => { %>
            <div class="col-lg-6 userPackages">
                <div class="package-header">
                    <h2><%= element.name %></h2>
                </div>
                <div class="package-header-highlight">
                    <h3><%= element.highlight %></h3>
                <h4><%= element.details %></h4>
                <center>
                    <button class="btn btn-success button-deco" value="">Pay<%- " " +element.price+" USD" %> </button>
                </center>
                <br>
               </div>
            </div>
    <% }); %>
       </div>
    </div>
</div>